<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :specialist_id %>
    <%= f.input :name %>
    <%= f.input :notes %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
