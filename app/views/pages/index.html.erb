<div class="container">
	<div class="panel panel-default">
		<div class="panel-body">
			<h2><strong>Conditions</strong><span class="pull-right"></span>
				<a class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal">
					Add Page
				</a>
			</h2>
			<%= link_to "All", pages_path, class: "btn btn-default" %>
			<%= link_to "Allergies", pages_path, class: "btn btn-default" %>
			<%= link_to "Diseases", pages_path, class: "btn btn-default" %>
			<%= link_to "Most Tracked", pages_path, class: "btn btn-default " %>
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h3 class="modal-title" id="myModalLabel">New Page</h3>
						</div>
						<%= form_for Page.new do |f| %>
						<div class="modal-body">
							<div>
								<%= f.label :name %><br />
								<%= f.text_field :name, autofocus: true, class:"form-control" %>
							</div>
							<div>
								<%= f.label :description %><br />
								<%= f.text_area :description, class:"form-control" %>
							</div>
							<div>
								<%= f.label :page_type %><br />
								<%= f.select :page_type, page_type: ["Allergy", "Disease or Condition"] %><br />
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							<%= f.submit "Save", class: "btn btn-primary" %>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-body">

			<% @pages.each do |page| %>
			<div>
				<h4 class="">
					<Strong><%= link_to page.name, page %></strong> - <%= page.page_type %>
				</h4>
				<%= page.conditions.count %> people are tracking this condition. 
				<h3>
					<%= link_to "Show", page, class: "btn btn-sm btn-default" %>
				</h3>
				<hr>

				</div>
			<% end %>