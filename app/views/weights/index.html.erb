<%= render partial: 'layouts/profile_nav', object: @user %>
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h2><strong>Weight</strong><span class="pull-right"></span></h2>
		</div>
		<div class="panel-body">
<%= line_chart @user.weights.group(:created_at).maximum(:amount) %>

<%= form_for Weight.new do |f| %>

  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p><%= f.submit class: "btn btn-default" %></p>
<% end %>
	<table class="table table-bordered">
		<tr>
			<th>amount</th>
			<th>Date</th>
		</tr>
		<% for weight in @weights %>
		<tr>
			<td><%= weight.amount %></td>
			<td><%= weight.created_at %></td>
			<td><%= link_to "Show", weight %></td>
			<td><%= link_to "Edit", edit_weight_path(weight) %></td>
			<td><%= link_to "Destroy", weight, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
		<% end %>
	</table>
</div>
</div>