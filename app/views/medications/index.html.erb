<%= render partial: 'layouts/profile_nav', object: @user %>
<div class="container">
	<h2><strong>Medications</strong> - <%= link_to @user.full_name, @user %></h2>
	<hr>
	<%= link_to new_medication_path, class: "btn btn-default pull-right" do %> New Medication <% end %>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Description</th>
		</tr>
		<% for medication in @medications %>
		<tr>
			<td><%= medication.name %></td>
			<td><%= medication.dosage %></td>
			<td><%= link_to "Show", medication %></td>
			<td><%= link_to "Edit", edit_medication_path(medication) %></td>
			<td><%= link_to "Destroy", medication, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
		<% end %>
	</table>
</div>
</div>